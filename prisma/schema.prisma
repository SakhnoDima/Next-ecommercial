generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  description String
  imageUrl    String
  name        String
  price       Int
  createdAt   DateTime   @default(now())
  updaredAt   DateTime   @updatedAt
  CardItem    CardItem[]

  @@map("products")
}

model Card {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  items     CardItem[]
  createdAt DateTime   @default(now())
  updaredAt DateTime   @updatedAt

  @@map("carts")
}

model CardItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int
  cardId    String  @db.ObjectId
  cart      Card    @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@map("cartitems")
}
